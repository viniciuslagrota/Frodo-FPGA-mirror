#include "random.h"

int randombytes(unsigned char* random_array, u32 nbytes)
{
	u32 ullnBytesCount = nbytes;
	u32 u32Random;
	u32 idx = 0;
	int32_t i;

	printf("Random bytes requested: %d\n", nbytes);

	for(i = nbytes; i > 3; i = i - 4)
	{
		u32Random = rand();

		random_array[i + 0] = (u32Random >> 0) & 0xff;
		random_array[i + 1] = (u32Random >> 8) & 0xff;
		random_array[i + 2] = (u32Random >> 16) & 0xff;
		random_array[i + 3] = (u32Random >> 24) & 0xff;

		printf("nbytes: %d  \tRandom: %x   \t  i : %d\n", nbytes, u32Random, i);
//		printf("i : %d\n", i);
	}


	return passed;
}
