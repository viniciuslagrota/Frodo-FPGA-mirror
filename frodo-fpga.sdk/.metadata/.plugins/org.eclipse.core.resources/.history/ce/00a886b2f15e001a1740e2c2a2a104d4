	KeccakF1600_StatePermute_HW(state);
	t = get_cyclecount() - t;
	printStateMatrixDebug(state);
	print_debug(DEBUG_TEST_KEM, "[TEST_KEM] Hardware function took exactly %d cycles or %d us (including function call)\n\n", t - overhead, (t - overhead)/666);

